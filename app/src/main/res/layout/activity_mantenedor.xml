<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wanderson.acheivagamap.View.ActivityPrincipal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapMantenedor"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bntUsuario"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#6C006400"
                android:onClick="chamaCadastroUsuario"
                android:text="Cadastrar
  UsuÃ¡rio"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnEstacionamento"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:background="#6C006400"
                android:onClick="chamaCadastroEstacionamento"
                android:text="Cadastrar
 Estacionamento"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>