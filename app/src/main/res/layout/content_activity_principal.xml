<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wanderson.acheivagamap.View.ActivityPrincipal"
    tools:showIn="@layout/app_bar_activity_principal">

    <RelativeLayout
        android:id="@+id/filtroLista"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bntFiltro"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#6C006400"
                android:onClick="chamaFiltro"
                android:text="Filtro"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnLista"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#6C006400"
                android:onClick="chamaLista"
                android:text="Lista"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="20dp" />
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
